<RelativeLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="5dp">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/ivMovie"
        tools:src="@tools:sample/avatars"
        android:padding="5dp"
        />

    <TextView
        android:id="@+id/tvMovieTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/ivMovie"
        android:layout_toRightOf="@id/ivMovie"
        android:layout_alignParentTop="true"
        android:textStyle="bold"
        tools:text="sample header movie title"
        android:fontFamily="monospace"
    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvMovieDescription"
        android:layout_toRightOf="@id/ivMovie"
        tools:text="a big long desc of the movie to be read out in 3 lines with ellipses. wo hoo this is a long description!"
        android:layout_below="@id/tvMovieTitle"
        android:paddingTop="5dp"
        android:fontFamily="monospace"
        android:ellipsize="end"
        android:maxLines="3"
        />
</RelativeLayout>